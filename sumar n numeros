#include "stdafx.h"
#include <iostream> 
#include "conio.h"
using namespace std;
void main() 

{ 
	int n,suma=0;
	float num;
	cout<<"ingrese cuantos numeros va a sumar: ";
	cin>>n;
	for(int i=1;i<=n;i++) 
	{ cout<<"introduzca un numero: ";
	  cin>>num;
	  suma=suma+num;
	}
	cout<<"la suma es: "<<suma<<endl;
    
	getch();
}
