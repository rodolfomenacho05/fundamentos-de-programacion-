float num, numer;

int main()

{
    string usuario;
    string clave;
    vector<string> usuarios;
	vector<string> claves;
	//usuarios del vector
	usuarios.push_back("luis");
	usuarios.push_back("rodolfo");
	usuarios.push_back("daniel");
	//claves del vector
	claves.push_back("admin");
	claves.push_back("admin1");
	claves.push_back("admin2");
    int contador = 0;
    bool ingresa = false;

	int op, adm, inv, u;
	
	
	
	do 
	{
		cout<<"----------ING APP----------"<<endl;
		cout<<"1.- Ingresar como cliente"<<endl;
		cout<<"2.- Ingresar como admin"<<endl;
		cout<<"3.- area del triangulo "<<endl;
		cout<<"4.- Suma de n numeros"<<endl;
		cout<<"5.- salir"<<endl;
		cout<<"Elija una opcion [1-5]"<<endl;
		cin>>op;
		
		switch (op)
		{
			case 1: cout<<"--------Bienvenido-------"<<endl;
			mostrar (vec, t);
			
			break;
			case 2: 
				do
	              {
	                  system ("cls");
	                  cout<<"\t\t\tLOGIN DE USUARIO"<<endl;
	                  cout<<"\t\t\t----------------"<<endl;
	                  cout<<"\n\t\tUsuario: ";
	                  cin>>usuario;
	                  cout<<"\t\tClave: ";
	                   char caracter;
	                   caracter = getch();
	                   while (caracter != 13)
	                    {
							if(caracter !=8)
							{
							  clave.push_back(caracter);
	                    	  cout<<"*";
	                        }
	                        else
	                        {
	                          if (clave.length() > 0)
	                          {
	                          	cout<<"\b \b";
	                          	clave = clave.substr(0, clave.length() -1);
	                          }
	                        }
	                        caracter = getch();
	                    }
	                     for (int i=0; i < usuarios.size(); i++)
						 {
						 	if (usuarios[i] == usuario && claves[i] == clave)
						 	{
						 		ingresa = true;
								break;
						 	}
	                     }
	                     if (!ingresa)
	                     {
	                     	 cout<<endl;
							 cout<<"\n\t\tEl usuario o clave es incorrecto!"<<endl;
	                     	 cin.get();
	                     	 getch();
							 contador++;
	                     	
	                     }
	                  
                 }while (ingresa == false && contador<3);
                    if (ingresa == false)
                    {
    	              cout<<"Supero el limite de intentos."<<endl;
    	              return main();
                    }
	                 else
                    {
    	              system("cls");
		              cout<<"---------Bienvenido al modo administrador--------"<<endl;
    	              cout<<endl;
                    }
        
			
			
			        do
