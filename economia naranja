}

void cTrabajadores(string vec[], int tam)
{
	
	cout<<"Cuantos trabajadores desea agregar: "<<endl;
	cin>>t;

	
}
void mostrar(string vec[], int tam)
{
	cout << endl<<"Trabajadores ordenados"<<endl;
	for(int j=0;j<tam;j++)
		cout<<"-----------------[ " <<j<< " ]----------------- "<<endl;
}
void cargar (string vec[], int tam)
{
	for (int j=0; j<tam; j++)
	{
		cout<<""<<j<<""<<endl;
		cout<<endl;
	}
}
void nuevoreg(string vec[], int j)
{

		do
		{
		cout<<"1.- Registrar \n2.- Salir"<<endl;
		cin>>op1;
		cin.ignore();
		
		if (op1 == 1)
		 {
		 if (!archivo.is_open())
		 {
		 	archivo.open ("trabajoprogra.txt", ios::out);
		 }
		 
		   cout<<"Nombre: ";
		   cin>>nombre;
		   cout<<"Apellido: ";
		   cin>>apellido;
		   cout<<"Telefono: ";
		   cin>>telefono;
		   cout<<"Ingeniero | Licenciado | Doctor: ";
		   cin>>carrera;
		   cout<<"Especialidad: ";
		   cin>>spec;
		
		     cout<<"1.- Guardar registros \n2.- Volver"<<endl;
		     cin>>op2;
	    
		 if (op2 == 1)
		   {
		 	archivo<< "-------------[ " <<j<< " ]-------------"<<endl;
			archivo<< "Nombre: " <<nombre<<endl;
		 	archivo<< "Apellido: "<<apellido<<endl;
		 	archivo<< "Telefono: "<<telefono<<endl;
		 	archivo<< "Ingeniero - Licenciado - Doctor: "<<carrera<<endl;
		 	archivo<< "Especialidad: "<<spec<<endl;
		 	
		 	system ("cls");
		 	
		 	cout<<"Registro guardado con exito...\n";
		 	system ("pause");
		 	system ("cls");
		   }
            archivo.close ();
         }
        }while (op1 !=2);
}

void Triangulo(float x)

{
	
	float a,b,area;
	    //pedir base
		cout<<"ingrese la base: ";
	    cin>>a;
		//pedir altura
		cout<<"ingrese la altura: ";
		cin>>b;
		area= (a*b)/2;//proceso
		//salida
		cout<<"el area del triangulo es: "<<area<<endl<<endl<<endl;
	getch();

}
void sumaN(float y)
{
	int n, numero, mayor=0, menor=128;
	float suma=0, promedio;
	
	cout<<"ingrese el numero de elementos: ";
	cin>>n;
	
	for (int i=1; i<=n;i++)
	{
		cout<<"Ingrese un numero: ";
		cin>>numero;
		
		if (mayor<numero)
		mayor=numero;
		if(menor>numero);
		menor=numero;
		suma= suma+numero;
		
	}
	promedio= suma/n;
	cout<<"El mayor es: "<<mayor<<endl;
	cout<<"El menor es: "<<menor<<endl;
	cout<<"El promedio es: "<<promedio<<endl;
	
	
	
	getch();





}
