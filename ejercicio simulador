float calculoperimetro (float r )
{
	return 2*3.141516*r;
}
float calculoarea (float r )
{
	return 2*3.141516*r*r;
}

float calculovolumen(float r)
{
	float V=(4/3)*3.141516*r*r*r;//
return V;


}

float calculodiametro(float r)
{
return V;
}
