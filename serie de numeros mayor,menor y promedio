#include "stdafx.h"
#include <iostream> 
#include "conio.h"
using namespace std;
void main() 

{ //ayuda sos no se programar ;-c 
	
	int n,num,mayor=0,menor=128;
    float suma=0,promedio;
	cout<<"ingrese el numero de elementos: ";
	cin>>n;
	for (int i=1;i<=n;i++)
    {
		cout<<"ingrese un numero: ";
		cin>>num;
		if (mayor<num)
			mayor=num;
	    if (menor>num)
			menor=num;
		suma=suma+num;
		}
	promedio=suma/n;
	cout<<"el mayor es: "<<mayor<<endl;
	cout<<"el menor es: "<<menor<<endl;
	cout<<"el promedio es: "<<promedio<<endl;

	

	getch();

}
